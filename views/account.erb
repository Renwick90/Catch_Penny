<form method="get">
<label for="search">Search by tag:</label>
<select name="search">
<option value=""></option>
<% @tags.each do |tag|%>
<option value="<%=tag.id%>"><%=tag.type %></option>
<% end %>
</select>
<input type="hidden" name="search_type" value="tag">
<input type="submit" value="search" >
</form>

<form method="get">
<label for="search">Search by merchant:</label>
<select name="search">
<option value=""></option>
<% @merchants.each do |merchant|%>
<option value="<%=merchant.id%>"><%=merchant.name %></option>
<% end %>
</select>
<input type="hidden" name="search_type" value="merchant">
<input type="submit" value="search">
</form>
